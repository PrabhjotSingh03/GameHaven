@model Gamers_Hub.Models.BuyerDto

@{ ViewBag.Title = "DeleteConfirm"; }

<h1>Gamers Hub</h1>
<h2>Are you sure you want to delete Buyer <strong>'@Model.BuyerName'</strong>?</h2>

<table id="BuyerListTable">
    <tr>
        <th id="thID">Buyer ID</th>
        <th id="thBuyerName">Buyer Name</th>
        <th id="thBuyerEmail">Buyer Email</th>
    </tr>
    <tr>
        <td id="tdID"><a href="/Buyer/Details/@Model.BuyerID">@Model.BuyerID</a></td>
        <td id="tdBuyerName"><a href="/Buyer/Details/@Model.BuyerID">@Model.BuyerName</a></td>
        <td id="tdBuyerLocation"><a href="/Buyer/Details/@Model.BuyerID">@Model.BuyerEmail</a></td>
    </tr>
</table>

<div id="btnContainer">
    <div>
        <a href="/Buyer/List" id="backbtn">Cancel</a>
    </div>
    <div>
        <form action="/Buyer/Delete/@Model.BuyerID" method="POST">
            <input type="submit" value="Confirm Delete" id="delBtn" />
        </form>
    </div>
</div>

<style>
    body {
        text-align: center;
    }

    h1 {
        font-family: 'Ubuntu', sans-serif;
        font-weight: bold 700;
        margin-top: 2em;
        margin-bottom: 0;
    }

    h2 {
        font-family: 'Ubuntu', sans-serif;
        font-weight: bold 400;
        margin: 1em auto;
    }

    #BuyerListTable {
        border-style: solid;
        margin-left: auto;
        margin-right: auto;
        table-layout: fixed;
        width: 60%;
    }

    #thID, #tdID {
        width: 100px;
        text-align: center;
    }

    #thBuyerName, 
    #tdBuyerName {
        width: 340px;
        text-align: center;
    }

    #thBuyerEmail, 
    #tdBuyerEmail {
        width: 240px;
        text-align: center;
    }

    th, td {
        border: 1px solid black;
    }

    #btnContainer {
        display: flex;
        flex-flow: row;
        align-items: baseline;
        justify-content: center;
    }

    #delBtn {
        border: 1px solid;
        border-radius: 5px;
        margin-top: 1em;
        padding: 0.5em;
        color: red;
    }

    #backbtn {
        border: 1px solid;
        border-radius: 5px;
        margin-top: 1em;
        margin-right: 4em;
        padding: 0.64em;
        color: blue;
    }
</style>