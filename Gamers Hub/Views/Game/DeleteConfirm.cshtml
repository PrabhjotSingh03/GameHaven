@model Gamers_Hub.Models.GameDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h1>Gamers Hub</h1>
<h2>Are you sure you want to delete this game?</h2>

<table id="GameDetailsTable">
    <tr>
        <th id="trID">Game ID</th>
        <th id="trName">Name</th>
        <th id="trReleaseYear">Release Year</th>
        <th id="trDescription">Description</th>
        <th id="trGenre">Genre</th>
        <th id="trPrice">Price</th>
    </tr>
    <tr>
        <td id="tdID">@Model.GameID</td>
        <td id="tdName">@Model.GameName</td>
        <td id="tdReleaseYear">@Model.ReleaseYear</td>
        <td id="tdDescription">@Model.Description</td>
        <td id="tdGenre">@Model.GenreName</td>
        <td id="tdPrice">@Model.Price</td>
    </tr>
</table>

<div id="btnContainer">
    <div>
        <a href="/game/List" id="backbtn">Cancel</a>
    </div>
    <div>
        <form action="/Game/Delete/@Model.GameID" method="POST">
            <input type="submit" value="Confirm Delete" id="delBtn" />
        </form>
    </div>
</div>


<style>
    body {
        text-align: center;
    }

    th, td {
        border: 1px solid black;
    }

    #trID, #tdID, 
    #trGenre, #tdGenre {
        width: 100px;
        text-align: center;
    }

    #trName, 
    #tdName {
        width: 340px;
        text-align: center;
    }

    #trDescription, 
    #tdDescription {
        width: 240px;
        text-align: center;
    }

    #trReleaseYear, 
    #tdReleaseYear {
        width: 150px;
        text-align: center;
    }

    #trPrice, 
    #tdPrice {
        width: 80px;
        text-align: center;
    }

    #GameDetailsTable {
        margin-top: 2em;
    }

    #btnContainer {
        display: flex;
        flex-flow: row;
        align-items: baseline;
        justify-content: center;
    }


    #delBtn {
        border: 1px solid;
        border-radius: 5px;
        margin-top: 1em;
        padding: 0.5em;
        color: red;
        cursor: pointer;
    }

    #delBtn:hover {
            background-color: red;
        }

    #backbtn {
        border: 1px solid;
        border-radius: 5px;
        margin-top: 1em;
        margin-right: 4em;
        padding: 0.64em;
        color: blue;
        cursor: pointer;
    }

    #backbtn:hover {
          background-color: blue;
    }
</style>

